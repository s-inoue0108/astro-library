---
import Layout from "../../layouts/Layout.astro";
import SearchUi from "../../components/blog/large/SearchUi.vue";
import { articles } from "../../lib/newt/instance";
import NoContent from "../../components/blog/background/NoContent.astro";
---

<Layout
	title={`記事を検索 | ブログ | ${import.meta.env.APP_NAME}`}
	description="キーワードを含む記事を検索できます"
>
	{
		articles && articles.length > 0 ? (
			<SearchUi articles={articles} client:load />
		) : (
			<NoContent message="記事がありません" />
		)
	}
</Layout>
