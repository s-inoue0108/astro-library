---
import Layout from "../../layouts/Layout.astro";
import SearchUi from "../../components/blog/large/SearchUi.vue";
import { getArticles } from "../../lib/newt/client";
import NoContent from "../../components/blog/background/NoContent.astro";

const articles = await getArticles();
---

<Layout title={`記事を検索 | ブログ | ${import.meta.env.APP_NAME}`} description="記事検索ページ">
	{articles && articles.length > 0 ? <SearchUi articles={articles} client:load /> : <NoContent message="記事がありません" />}
</Layout>
