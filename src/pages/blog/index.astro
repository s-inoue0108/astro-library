---
import Layout from "../../layouts/Layout.astro";
import ArticleCard from "../../components/blog/card/ArticleCard.astro";
// newt
import { getArticles } from "../../lib/newt/client";

const articles = await getArticles(10, "desc");

// prerender page
export const prerender = true;
---

<Layout title={`ブログ | ${import.meta.env.APP_NAME}`} description="ブログ">
	<ul class="cards">
		{
			articles.map((article) => {
				return <ArticleCard articleProps={article} />;
			})
		}
	</ul>
</Layout>

<style lang="scss">
	.cards {
		width: 100%;
		margin: auto;
		display: flex;
		flex-direction: column;
		gap: 1rem;

		@include resp(lg) {
			flex-direction: row;
			flex-wrap: wrap;
		}
	}
</style>
