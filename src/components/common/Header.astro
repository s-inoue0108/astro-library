---
import ThemeButton from "./buttons/Theme.vue";
import SvgButton from "./buttons/Svg.vue";
// Image
import { Image } from "astro:assets";
// HeaderImage
import HeaderImage from "../../images/common/portfolio-favicon.png";

const currentPath = Astro.url.pathname;
---

<header>
	<ul class="app-title">
		<a href={import.meta.env.APP_URL} class="header-img">
			<Image src={HeaderImage} alt={import.meta.env.APP_NAME} />
		</a>
		<h1 class="title">{import.meta.env.APP_NAME}</h1>
	</ul>
	<ul class="page-links">
		<li class="link">
			<SvgButton
				title="Profile"
				isLink={true}
				linkUrl="/profile"
				currentPath={currentPath}
				testPathRegex={new RegExp("^/profile")}
				widthScale={1.7}
				heightScale={0.6}
				fontScale={0.75}
			/>
		</li>
		<li class="link">
			<SvgButton
				title="Contact"
				isLink={true}
				linkUrl="/contact"
				currentPath={currentPath}
				testPathRegex={new RegExp("^/contact")}
				widthScale={1.7}
				heightScale={0.6}
				fontScale={0.75}
			/>
		</li>
		<li class="link">
			<SvgButton
				title="Blog"
				isLink={true}
				linkUrl="/blog"
				currentPath={currentPath}
				testPathRegex={new RegExp("^/blog")}
				widthScale={1.7}
				heightScale={0.6}
				fontScale={0.75}
			/>
		</li>
	</ul>
	<ThemeButton client:load />
</header>

<style lang="scss">
	header {
		position: relative;
		width: 100vw;
		height: 36px;
		padding: 0 12px;

		@include resp(sm) {
			height: 48px;
			padding: 0 24px;
		}

		@include resp(lg) {
			height: 64px;
			padding: 0 48px;
		}

		display: flex;
		justify-content: space-between;
		align-items: center;
		position: fixed;
		top: 0;
		z-index: 9999;

		background: getColor(--bg-secondary-color, 0.9);
		// box-shadow: 0 0 7px getColor(--shadow-color);

		.app-title {
			display: flex;
			align-items: center;
			gap: 64px;

			.title {
				font-size: 1.8rem;
				font-weight: 700;
				letter-spacing: 1px;
				color: getColor(--text-primary-color);
				position: absolute;
				top: 50%;
				left: 128px;
				transform: translateY(-50%);

				display: none;

				@include resp(lg) {
					display: block;
				}
			}

			.header-img {
				width: calc(36px * 0.8);
				height: calc(36px * 0.8);

				@include resp(sm) {
					width: calc(48px * 0.8);
					height: calc(48px * 0.8);
				}

				@include resp(lg) {
					width: calc(64px * 0.8);
					height: calc(64px * 0.8);
				}

				img {
					width: 100%;
					height: 100%;
					border-radius: 6px;
					object-fit: contain;

					&:active {
						opacity: 0.7;
						transition: 0.3s ease;
					}
				}
			}
		}

		.page-links {
			display: flex;
			align-items: center;
			gap: 0.6rem;

			@include resp(sm) {
				gap: 1rem;
			}

			@include resp(lg) {
				gap: 2rem;
				position: absolute;
				right: 12rem;
			}

			.link {
				color: getColor(--text-secondary-color);
			}
		}
	}
</style>
