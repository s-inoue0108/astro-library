---
import Theme from "./buttons/Theme.vue";
---

<header>
	<ul class="app-title">
		<a href={import.meta.env.APP_URL} class="header-img">
			<img src="/portfolio-favicon.png" />
		</a>
		<h1 class="title">
			{import.meta.env.APP_NAME}
		</h1>
	</ul>
	<ul class="buttons">
		<Theme client:load />
	</ul>
</header>

<style lang="scss">
	header {
		position: relative;
		width: 100%;
		height: 36px;

		@include resp(sm) {
			height: 48px;
			padding: 12px;
		}

		@include resp(lg) {
			height: 64px;
			padding: 32px 48px;
		}

		display: flex;
		justify-content: space-between;
		align-items: center;
		position: fixed;
		top: 0;
		z-index: 9999;
		padding: 6px;
		background: var(--bg-secondary-color);
		box-shadow: 0 0 7px var(--shadow-color);

		.app-title {
			display: flex;
			align-items: center;
			gap: 64px;

			.title {
				font-size: 1.8rem;
				font-weight: 700;
				letter-spacing: 1px;
				color: var(--text-primary-color);
				position: absolute;
				top: 50%;
				left: 128px;
				transform: translateY(-50%);

				display: none;

				@include resp(lg) {
					display: block;
				}
			}

			.header-img {
				height: calc(36px * 0.8);

				@include resp(sm) {
					height: calc(48px * 0.8);
				}

				@include resp(lg) {
					height: calc(64px * 0.8);
				}

				img {
					height: 100%;
					object-fit: cover;
					border-radius: 2px;

					&:active {
						opacity: 0.7;
					}
				}
			}
		}
	}
</style>
