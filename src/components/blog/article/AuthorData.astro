---
// Image
import { Image } from "astro:assets";
// HeaderImage
import HeaderImage from "../../../images/common/portfolio-favicon.png";
import SvgButton from "../../common/buttons/Svg.vue";
import { svgPaths, svgViewBoxes } from "../../../lib/svg/paths";
---

<div class="author-data">
	<figure>
		<Image src={HeaderImage} alt="Shota Inoue" />
		<figcaption>Shota Inoue</figcaption>
	</figure>
	<div class="author-info">
		<p class="text">大学生 | 化学・Webプログラミング・統計学など</p>
		<div class="btn">
			<SvgButton
				title="Read more"
				isLink={true}
				linkUrl="/profile"
				widthScale={4.4}
				svgIconPath={svgPaths.caretRight}
				svgViewBox={svgViewBoxes.caretRight}
			/>
		</div>
	</div>
</div>

<style lang="scss">
	.author-data {
		width: 100%;

		display: flex;
		flex-direction: column;
		justify-content: center;
		align-items: center;
		gap: 2rem;

		@include resp(lg) {
			flex-direction: row;
			align-items: end;
		}

		figure {
			width: 100%;
			height: 100%;
			display: flex;
			flex-direction: column;
			justify-content: center;
			align-items: center;
			gap: 1rem;

			@include resp(lg) {
				gap: 2rem;
			}

			img {
				width: 144px;
				height: 144px;
				object-fit: cover;
				border-radius: 9999px;

				@include resp(lg) {
					width: 208px;
					height: 208px;
				}
			}

			figcaption {
				font-size: 1.8rem;
				font-weight: 700;
				letter-spacing: 1px;

				@include resp(lg) {
					font-size: 2.6rem;
				}
			}
		}

		.author-info {
			width: 100%;
			height: 100%;
			display: flex;
			flex-direction: column;
			justify-content: center;
			align-items: center;
			gap: 1.6rem;
			padding: 0 2rem;

			color: getColor(--text-secondary-color);
			fill: getColor(--text-secondary-color);

			@include resp(lg) {
				gap: 2.4rem;
				padding: 0;
			}

			.text {
				font-weight: 300;

				@include resp(lg) {
					font-size: 1.6rem;
				}
			}
		}
	}
</style>
